{
	"$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"all": true
			},
			"suspicious": {
				"noAssignInExpressions": "off"
			},
			"style": {
				"noParameterAssign": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentSize": 4,
		"lineWidth": 120,
		"ignore": []
	  }
}
